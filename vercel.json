{
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "front/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/catan/browser",
        "buildCommand": "npm run vercel-build"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*\\.[a-z0-9]+$)", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
} 